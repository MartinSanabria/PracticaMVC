<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-6">
            <div class="mb-3 row">
                <label for="nombre" class="col-sm-3 col-form-label">Nombre</label>
                <div class="col-sm-9">
                    @Html.TextBox("nombre","", new{@class="form-control"})
                </div>
            </div>
            <div class="mb-3 row">
                <label class="col-sm-3 col-form-label">Contraseña</label>
                <div class="col-sm-9">
                    @Html.Password("Contrasena","", new{@class="form-control"})
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-3 col-form-label">Genero</label>
                <div class="col-sm-9">
                    <div class="form-check form-check-inline">
                        @Html.RadioButton("Genero", "Masculino", new{id="masculino"})
                        Masculino
                    </div>
                    <div class="form-check form-check-inline">
                        @Html.RadioButton("Genero", "Masculino", new{id="masculino"})
                        Femenino
                    </div>
                </div>
                
            </div>

            <div class="mb-3 row">
                <label class="col-sm-3 col-form-label" for="textArea">Direccion</label>
                <div class="col-sm-9">
                   @Html.TextArea("Direccion","",new{@class="form-control",id="TextArea"}) 
                </div>
            </div>

            <div class="mb-3 row">
                <label class="col-sm-3 col-form-label">Pasatiempos</label>
                <div class="col-sm-9">
                    <div class="form-check form-check-inline">
                        <label class="form-check-label" for="flexCheckDefault">
                            @Html.CheckBox("Bailar") Bailar
                        </label>
                        
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label" for="flexCheckDefault">
                            @Html.CheckBox("Correr") Correr
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <label class="form-check-label" for="flexCheckDefault">
                            @Html.CheckBox("Escalar")  Escalar
                        </label>
                    </div>
                    <div class="form-check form-check-inline">              
                        <label class="form-check-label" for="flexCheckDefault">
                            @Html.CheckBox("Peliculas")  Peliculas
                        </label>
                    </div>
                </div>
            </div>

            @{
                IEnumerable<string> strList = new List<string> { "POO", "TW", "MAT3", "FIS1" };
            }
            <div class="mb-3 row">
                <label class="col-sm-3 col-form-label">Curso</label>
                <div class="col-sm-9">
                    @Html.DropDownList("ddlCurso",new SelectList(strList,strList.FirstOrDefault()))
                </div>
                
            </div>

            <div class="mb-3 row">
                <label class="col-sm-3 col-form-label">Conocimientos</label>
                <div class="col-sm-9">
                    @Html.ListBox("Seleccionar habilidades", new List<SelectListItem>{
                        new SelectListItem{Text = "C#",Value="1"},
                        new SelectListItem{Text = "ASP.NET",Value="2"},
                        new SelectListItem{Text = "ASP.NET Core",Value="3"},
                        new SelectListItem{Text = "Azure",Value="4"}
                    })
                </div>
            </div>
        </div>
    </div>
</div>